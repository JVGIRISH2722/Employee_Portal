@model Login
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}
@{
    var isdisplayred = "none";
    if (ViewData["ValidPassword"] as string == "false")
    {
        isdisplayred = "block";
    }

    var isdisplaygreen = "none";
    if (ViewData["UserCreated"] as string == "true")
    {
        isdisplaygreen = "block";
    }

    var isdisplayorange = "none";
    if (ViewData["ExistingUser"] as string == "true")
    {
        isdisplayorange = "block";
    }
}
<html>
<head>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        /* Full-width input fields */
        input[type=text], input[type=password] {
            width: 100%;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: none;
            background: white

            ;
        }

            /* Add a background color when the inputs get focus */
            input[type=text]:focus, input[type=password]:focus {
                background-color: white;
                outline: none;
            }

        /* Set a style for all buttons */
        

        /* Float cancel and signup buttons and add an equal width */
        

        /* Add padding to container elements */
        .container {
            padding: 16px;
        }

        /* The Modal (background) */
        .modal {
            display: flex; /* Shown by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: lightgrey;
            padding-top: 100px;
            padding-inline: 350px;
        }

        /* Modal Content/Box */
        .modal-content {
            background-color: black;
            margin: 5% auto 15% auto; /* 5% from the top, 15% from the bottom and centered */
            border: 1px solid #888;
            width: 80%; /* Could be more or less, depending on screen size */
        }

        /* Style the horizontal ruler */
        hr {
            border: 1px solid #f1f1f1;
            margin-bottom: 25px;
        }

        /* The Close Button (x) */
        .close {
            position: absolute;
            right: 400px;
            top: 90px;
            font-size: 40px;
            font-weight: bold;
            color: #f1f1f1;
        }

            .close:hover,
            .close:focus {
                color: #f44336;
                cursor: pointer;
            }

        /* Clear floats */
        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        a {
            font-size: 20px;
        }
    </style>
    <script>
        // Get the modal
        var modal = document.getElementById('id01');

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
</head>
<body>
<div id="id01" class="modal">
    <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
    <form class="modal-content" method="post">
        <div class="container">
            <h1>Sign In</h1>
            <hr>
            <div class="mb-3">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" placeholder="Enter Email" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Enter password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <span style="color:green;display:@isdisplaygreen">New Employee created try to Login...</span>
                <span style="color:orangered;display:@isdisplayorange">User name already exist try to Login...</span>
                <span style="color:red;display:@isdisplayred">Invalid User Name or Password...</span>
            </div>
            <div class="clearfix">
                @*<button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>*@
                    <button type="submit" class="btn btn-secondary" fdprocessedid="z2oh" asp-validation="signup" asp-controller="Home" asp-action="SignUp">Sign Up</button>
                    <button type="submit" class="btn btn-secondary" fdprocessedid="z2oh" asp-controller="Home" asp-action="Login">Sign In</button>
            </div>
        </div>
    </form>
</div>
</body>
</html>
