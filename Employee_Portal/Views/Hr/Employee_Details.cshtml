<body>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <h2 class="text-dar border-dark">EMPLOYEE LIST</h2>
            </div>
                <div class="col-4 text-end">
                    <a asp-controller="Employee" asp-action="Create_Employee" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> &nbsp; Add New Employee
                    </a>
                </div>
            <div class="col-6 text-end">
                <a asp-controller="DeliveryManager" asp-action="Employee_Edit_Role" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Add New Employee
                </a>
            </div>
        </div>
    </div>
    <br /><br />
    @foreach(var obj in Model)
    {
        <div class="card text-white bg-primary mb-3" style="max-width: 30rem;">
            <div class="card-header">@obj.Employee_Name</div>
            <div class="card-body">
                <h4 class="card-title">Employee Details</h4>
                <label class="text">Id:</label>   <label class="text-end" Name="Id">@obj.Id</label><br>
                <label>Mail:</label>   <label Name="Mail:">@obj.Mail</label><br>
                <label>PhoneNumber:</label>   <label Name="PhoneNumber">@obj.PhoneNumber</label><br>
                <label>Gender:</label>   <label Name="Gender">@obj.Gender</label><br>
                <label>DOB:</label>   <label Name="DOB">@obj.DOB.ToLongDateString()</label><br>
                <label>Experience:</label>   <label Name="Experience">@obj.Experience</label><br>
                <label>Skill:</label>   <label Name="Skill">@obj.Skill</label><br>
                <label class="align-content-between">Role:</label>   <label class="align-content-between" Name="Role">@obj.Role</label><br>
                <div class="w-75 btn btn-group">
                    <a asp-controller="Employee" asp-action="Employee_Edit" asp-route-id="@obj.Id" asp-route-data="@obj.Skill"
                       class="btn btn-secondary" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="left" data-bs-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus." data-bs-original-title="Popover Title" fdprocessedid="vdq1fau"><i class="bi bi-plus-circle"></i>Add Skill</a>
                </div>
            </div>
        </div>  
    }
    
