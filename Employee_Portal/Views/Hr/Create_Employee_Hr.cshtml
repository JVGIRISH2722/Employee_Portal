@model Employee
<form method="post">
    @*<div asp-validation-summary="All"></div>*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Employee</h2>
            <hr />
        </div>
    <div class="mb-3">
            <label asp-for="Employee_Name"></label>
            <input asp-for="Employee_Name" class="form-control" />
            <span asp-validation-for="Employee_Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Mail"></label>
        <input asp-for="Mail" class="form-control"  />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control"  />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
        <div class="mb-3">
            <label asp-for="Gender" class="form-label mt-4"></label>
            <select name="Gender" class="form-select" id="exampleSelect1" fdprocessedid="x3t78t">
                <option></option>
                <option>MALE</option>
                <option>FEMALE</option>
                <option>OTHER</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    <div class="mb-3">
        <label asp-for="DOB"></label>
        <input asp-for="DOB" class="form-control"  />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Experience"></label>
        <input asp-for="Experience" class="form-control" readonly/>
        <span asp-validation-for="Experience" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Skill"></label>
        <input asp-for="Skill" class="form-control" readonly/>
        <span asp-validation-for="Skill" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Role"></label>
        <input asp-for="Role" class="form-control" readonly/>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    <a asp-controller="Hr" asp-action="Employee_Details_Hr" class="btn btn-primary" style="width:150px">
        Back To Employee List
    </a>



</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
